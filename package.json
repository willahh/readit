{
  "name": "Readit",
  "version": "1.0.0",
  "description": "Readit application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "build": "electron-builder",
    "release": "electron-builder build -m -p 'onTagOrDraft'"
  },
  "repository": "https://github.com/willahh/readit",
  "keywords": [
    "Electron"
  ],
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.0",
    "win-cert": "electron-builder create-self-signed-cert -p williamravel"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "dev.williamravel.readit",
    "copyright": "Copyright williamravel.dev",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "zip"
    },
    "linux": {
      "category": "Utility"
    }
  }
}
